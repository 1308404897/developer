<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="logDir" value="~/home/logs/developer"/>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date [%thread] %-5level %C %logger{50}:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="logfile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logDir}/developer_${processName}.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${logDir}/logs/history/developer.%d{yyyy-MM-dd}${processName}.log.gz</FileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date [%thread] %-5level %C %logger{50}:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.http">
        <level value="WARN"/>
    </logger>
    <logger name="org.hibernate">
        <level value="WARN"/>
    </logger>
    <logger name="ch.qos.logback">
        <level value="WARN"/>
    </logger>

<!--    <root level="INFO">-->
    <root level="DEBUG">
<!--        <appender-ref ref="logfile"/>-->
        <appender-ref ref="stdout"/>
    </root>
</configuration>
